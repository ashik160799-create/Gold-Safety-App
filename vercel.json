{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ],
    "functions": {
        "backend/main.py": {
            "includeFiles": "backend/**"
        }
    },
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "cd frontend && npm install"
}